<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recomendacion"
    android:background="@color/fondo">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outfit del DÃ­a ðŸŒŸ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/letra"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Imagen del outfit -->
    <ImageView
        android:id="@+id/imageViewOutfit"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- BotÃ³n para refrescar outfit -->
    <Button
        android:id="@+id/btnNuevoOutfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Outfit"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/letra"
        android:backgroundTint="@color/botones"
        app:layout_constraintTop_toBottomOf="@id/imageViewOutfit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>